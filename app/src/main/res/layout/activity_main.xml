<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
          xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#000"
        android:layout_width="match_parent"
         android:layout_height="match_parent">

        <ImageView
            android:id="@+id/screenSwitch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"
            android:visibility="visible"
            app:srcCompat="@drawable/switch_screen" />
        <TextClock
            android:id="@+id/textClock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="18dp"
            android:textColor="@android:color/white"
            android:textSize="24sp" />
    <ListView
        android:id="@+id/scheduleList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textClock" />

    <ImageView
        android:id="@+id/weatherImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="56dp"
        android:src="@drawable/ic_ziwaixian_white" />

    <TextView
        android:id="@+id/nowTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/weatherImg"
        android:layout_below="@+id/weatherImg"
        android:text="0.c"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/nowTemperature"
        android:layout_below="@+id/nowTemperature"
        android:text="0.c-0.c"
        android:textSize="22sp" />



    <TextView
        android:layout_centerInParent="true"
        android:id="@+id/greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="none"
        android:maxLines="5"
        android:scrollHorizontally="false"
        android:singleLine="false"
        android:text="你好"
        android:textSize="24sp" />
    <ListView
        android:id="@+id/newsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

    </RelativeLayout>
